{
  "compilerOptions": {
    "declaration": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "composite": false,
    "types": [
      "vitest/globals"
    ],
    "baseUrl": ".",    
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  }
}